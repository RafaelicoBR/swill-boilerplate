input[type="text"],
input[type="email"],
input[type="password"],
input[type="number"],
textarea,
select
	border 1px solid lighten(#000, 60%)
	border-radius 5px
	color lighten(#000, 35%)
	padding 5px 10px
	width 100%

	&:focus
		border-color #66afe9
		outline 0
		box-shadow inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)


input[type=file]:focus, input[type=checkbox]:focus, input[type=radio]:focus
	outline none

input[disabled]
	background lighten(#000, 95%)

::placeholder
	color lighten(#000, 55%)
	font-size em($font-size-base - 2)

.file-upload
	position relative
	overflow hidden
	margin 10px
	display inline-block


	input[type="text"]
		width auto

	input[type="file"]
		cursor pointer
		height auto
		margin 0
		opacity 0
		font-size em(50px)
		padding 0
		position absolute
		right 0
		top 0
